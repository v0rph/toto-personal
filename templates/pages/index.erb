<section id="articles">
  <% require 'karakuri' %>
  <div id="blog">
  </div>
  <div id="title">
    <h1>Blog</h1>
  </div>
  <% for article in articles[0...3] %>
    <article class="post">
      <header>
        <h1><a href="<%= article.path %>"><%= article.title %></a></h1>
        <span class="date"><%= article.date %></span>
      </header>

      <section class="content">
        <%= article.summary %>
      </section>
      <span class="tags">
        <%= Karakuri::tag_link_list(article[:tags])  %>
      </span><% 10.times { %>&nbsp;<%}%>
      <div class="upper">
        <a href="#header" alt="Back to Top">Î›</a>
      </div>
      <div class="more">
        <a href="<%= article.path %>">read on &raquo;</a>
      </div>
    </article>
  <% end %>
</section>

