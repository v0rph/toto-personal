<section id="articles">
  <% require 'karakuri' %>
  <section id="blog">
  </section>
  <section id="title">
    <h1>Blog</h1>
  </section>
  <% for article in articles[0...3] %>
    <article class="post">
      <header>
        <h1><a href="<%= article.path %>"><%= article.title %></a></h1>
        <span class="date"><%= article.date %></span>
      </header>

      <section class="content">
        <%= article.summary %>
      </section>
      <span class="tags">
        <%= Karakuri::tag_link_list(article[:tags])  %>
      </span><% 10.times { %><%}%>
      <section class="upper">
        <a href="#" alt="Back to Top">Λ</a>
      </section>
      <div class="more">
        <a href="<%= article.path %>">read on &raquo;</a>
      </div>
    </article>
  <% end %>
</section>

<section id="archives">
  <%= archives[3..-1] %>
  <a href="/archives">all posts »</a>
</section>

